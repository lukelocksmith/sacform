
.first-screen
	width: 100%;
	height: 100vh;
	display flex
	align-items center
	justify-content center
	background: linear-gradient(0deg, rgba(24, 55, 98, 0.5), rgba(24, 55, 98, 0.5)), linear-gradient(0deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(../img/bgc_main.png);
	background-repeat: no-repeat;
	background-size cover
	box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
.first-screen_text
	width 64.17%
	height auto		
	a 
		color: #ffffff
		
	h1
		font-family: Colus;
		line-height: normal;
		letter-spacing: 0.02em;
		text-transform: uppercase;
		color: #FFFFFF;
		
		xl
			font-size: 60px;			
			padding-bottom: 30px;
		lg
			font-size: 50px;			
			padding-bottom: 25px;
		md
			font-size: 30px;			
			padding-bottom: 15px;
		sm
			font-size 20px
			padding-bottom 10px					
	h2
		font-family: SegoeUIRegular;
		line-height: normal;
		letter-spacing: 0.03em;
		color: #FFFFFF;
		
		xl
			font-size: 20px;			
		lg
			font-size: 18px;			
		md
			font-size: 15px;			
		sm
			font-size 12px