.all-section
	@media sm
		height 70vh

.main_site 
	position: absolute;
	top: 0;
	left: 0;

.section_text
	width 36.55vw
	z-index 99999
	@media sm
		width 80vw

.section_text-left
	margin-left 14.77vw
	@media sm
		margin: 0 auto;
		text-align: center;

.section_text-right
	float right 
	margin-right 14.77vw
	text-align: right;
	@media sm
		margin: 0 auto;
		text-align: center;
		float: none

.section_text-center
	margin 0 auto
	text-align: center

.section_img
	position: absolute
	z-index -1
	@media sm
		width 100vw


.allbg-img
		img
			width 100%
			height 100%
.bg1
	right 0
	top 13.15vh

.bg1-img
	width 60.5vw
	height auto

.bg2
	left 0
	top 0

.bg2-img
	width 82vw
	height auto

.bg3
	top 0

.bg3-img
	width 100vw
	height 100vh

.bg3_left
	float left
	width auto
	height 100vh

.bg3_right
	width auto
	height 100vh
	float right
	transform: scaleX(-1);

.big_text
	font-family: Colus;
	font-style: normal;
	font-weight: normal;
	line-height: 3.3vw;
	font-size: 2.5vw;
	letter-spacing: 0.05em;
	text-transform: uppercase;
	color: #183762;
	margin-bottom 5.5vh
	@media sm
		line-height: 7vw;
		font-size: 5.3vw;
		letter-spacing: 0.05em;
		
.mid_text
	font-family: "SegoeUIRegular";
	font-style: normal;
	font-weight: 600;
	line-height: 2.2vw;
	font-size: 1.15vw;
	letter-spacing: 0.03em;
	color: #0D0D0D;
	@media sm
		display: none