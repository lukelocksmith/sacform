.section
	@media xlarge
		padding-left: 7.7vw;
		padding-right: 7.7vw;

	@media large
		padding-left: 7vw;
		padding-right: 7vw;

	@media medium
		padding-left: 6.7vw;
		padding-right: 6.7vw;

	@media small
		padding-left: 13vw;
		padding-right: 13vw;

.section_text
	width 36.55vw
	z-index 99999

.section_text-left
	margin-left 6.77vw

.section_text-right
