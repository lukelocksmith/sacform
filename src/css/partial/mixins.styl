sm = 'screen and (min-width: 320px) and (max-width: 425px)'
md = 'screen and (min-width: 426px) and (max-width: 993px)'
lg = 'screen and (min-width: 994px) and (max-width: 1300px)'
xl = 'screen and (min-width: 1301px)'

