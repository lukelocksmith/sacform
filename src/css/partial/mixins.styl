.pulse_blue {
    display: block;
    border-radius: 50%;
    background: #183762;
    cursor: pointer;
    box-shadow: 0 0 0 rgba(24, 55, 98, 0.4);
    animation: pulse 2s infinite;
	color: #fff !important;
}

.pulse_blue:hover {
    animation: none;
}

@keyframes pulse_blue {
    0% {
        box-shadow: 0 0 0 0 rgba(24, 55, 98, 0.3);
    }
    70% {
        box-shadow: 0 0 0 10px rgba(24, 55, 98, 0);
    }
    100% {
        box-shadow: 0 0 0 0 rgba(24, 55, 98, 0);
    }
}

.pulse_white {
    display: block;
    border-radius: 50%;
    background: #fff;
    cursor: pointer;
    box-shadow: 0 0 0 rgba(255, 255, 255, .4);
    animation: pulse 2s infinite;
	color: #183762 !important;
}

.pulse_white:hover {
    animation: none;
}

@keyframes pulse_white {
    0% {
        box-shadow: 0 0 0 0 rgba(255, 255, 255, .3);
    }
    70% {
        box-shadow: 0 0 0 10px rgba(255, 255, 255, 1);
    }
    100% {
        box-shadow: 0 0 0 0 rgba(255, 255, 255, .0);
    }
}

